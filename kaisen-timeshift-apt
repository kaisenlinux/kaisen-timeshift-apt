#!/bin/bash

set -e

export PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
export RED='\e[1;31m'

if [ "$EUID" -ne "0" ]; then
	echo -e $RED "Run this script as root or with the sudo command."
	exit 1
fi

if [ "$(stat -c %d:%i /)" != "$(stat -c %d:%i /proc/1/root/.)" ]; then
	echo "Running in chroot, ignore the snapshot creation request."
	exit 0
fi

if ! command -v timeshift > /dev/null; then
	exit 0
fi

#Check if / use BTRFS as filesystem to remove kaisen-btrfs-snapshots if BTRFS not use
CHECK_ROOTFS=$(grep -v -E "^(#|$)" /etc/fstab | grep -v /bin | grep -v /boot | grep -v /etc | grep -v /home | grep -v /lib | grep -v /media | grep -v /mnt | grep -v /opt | grep -v /root | grep -v /run | grep -v /sbin | grep -v /srv | grep -v /tmp | grep -v /usr | grep -v /var | grep -o btrfs || true)
CHECK_FSTAB=$(grep -v -E "^(#|$)" /etc/fstab | grep -v /bin | grep -v /boot | grep -v /etc | grep -v /home | grep -v /lib | grep -v /media | grep -v /mnt | grep -v /opt | grep -v /root | grep -v /run | grep -v /sbin | grep -v /srv | grep -v /tmp | grep -v /usr | grep -v /var | grep -o subvol=@ || true)
CHECK_SUBVOL=$(grep -o "/ btrfs" /proc/mounts 2> /dev/null || true)

if [ "$CHECK_ROOTFS" = "btrfs" 2> /dev/null ] && [ "$CHECK_FSTAB" = "subvol=@" 2> /dev/null ] && [ "$CHECK_SUBVOL" = "/ btrfs" 2> /dev/null ]; then
	timeshift --scripted --yes --btrfs --create --comments "Automatic APT snapshot"
fi
